Package: mleap
Type: Package
Title: Interface to 'MLeap'
Version: 1.0.0
Authors@R: c(
  person("Kevin", "Kuo", role = c("aut", "cre"), email = "kevin.kuo@rstudio.com",
  comment = c(ORCID = "0000-0001-7803-7901"))
